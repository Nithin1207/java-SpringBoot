      </dependency>
      <dependency>
        <groupId>tools.jackson.datatype</groupId>
        <artifactId>jackson-datatype-guava</artifactId>
        <version>${jackson.version.datatype}</version>
      </dependency>

      <!-- 17-Dec-2022, tatu: Hibernate modules not converted to 3.0, may not be ported -->
